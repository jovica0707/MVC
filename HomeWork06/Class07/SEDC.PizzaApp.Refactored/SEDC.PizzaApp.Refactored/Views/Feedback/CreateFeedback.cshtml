@model SEDC.PizzaApp.ViewModels.Feedback.FeedbackViewModel

<h2>Add a new Feedback</h2>
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateFeedback" asp-controller="Feedback" method="post">
            <div class="form-control">
                <label asp-for="Name"></label>
                <input asp-for="Name" required />
            </div>
            <div class="form-group">
                <label asp-for="Email"></label>
                <input type="email" asp-for="Email" required />
            </div>
            <div class="form-group">
                <label asp-for="Message"></label>
                <textarea type="textbox" asp-for="Message" rows="4" cols="50" maxlength="100" required></textarea>
            </div>
            <button type="submit" class="btn btn-default">Add Feedback</button>
            <a asp-controller="Feedback" asp-action="index">Cancel</a>
        </form>
    </div>
</div>
